                        android:layout_width="match_parent"
                        android:id="@+id/cardview_payment"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        app:cardCornerRadius="@dimen/_4sdp"
                        app:cardElevation="@dimen/_2sdp"
                        android:backgroundTint="#EDF2FD"
                        app:cardUseCompatPadding="true">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_4sdp"
                            android:layout_marginVertical="@dimen/_12sdp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">


                                <TextView
                                    android:id="@+id/tv_PaymentTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:fontFamily="@font/lato"
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/_3sdp"
                                    android:text="Select Payment Method"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:id="@+id/iv_expandView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/ic_expand_more" />
                            </RelativeLayout>


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:id="@+id/lay_paymentOptions"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="horizontal">

                                <RadioGroup
                                    android:id="@+id/RG_MembershipPaymentMethods"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <RadioButton
                                        android:id="@+id/rb_MeezanBank"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:buttonTint="@color/black"
                                        android:text="Meezan Bank"
                                        android:fontFamily="@font/nunito_bold"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                        android:checked="true"/>

                                    <RadioButton
                                        android:id="@+id/rb_BankAlHabib"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:buttonTint="@color/black"
                                        android:text="Bank AlHabib"
                                        android:fontFamily="@font/nunito_bold"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

                                    <RadioButton
                                        android:id="@+id/rb_jazzCash"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:buttonTint="@color/black"
                                        android:text="jazzCash"
                                        android:fontFamily="@font/nunito_bold"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                        />


                                    <RadioButton
