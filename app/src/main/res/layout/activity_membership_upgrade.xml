                                        android:layout_height="0dp"
                                        android:layout_gravity="end"
                                        android:layout_weight="1"
                                        app:srcCompat="@drawable/ic_easypaisa"
                                        />


                                </androidx.appcompat.widget.LinearLayoutCompat>


                            </androidx.appcompat.widget.LinearLayoutCompat>

