<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_marginBottom="6dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">        android:layout_marginTop="6dp"


        <LinearLayout
            android:id="@+id/course_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#0F3F51B5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chinese_course_Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:src="@drawable/basic"
                android:scaleType="fitXY" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/chinese_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic Chinese"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_2sdp"
        android:textColor="@color/black" />        android:textStyle="bold"


</LinearLayout>