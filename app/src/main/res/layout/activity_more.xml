<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">



        <RelativeLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/secondary">

            <ImageView
                android:id="@+id/more_back_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/_6sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/lg_userName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:fontFamily="@font/lato"
                android:gravity="center"
                android:maxLines="1"
                android:text="More"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:id="@+id/more_logout_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_8sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_logout_button"
                app:tint="@color/white" />



        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/lay_more"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/more_profile_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginVertical="@dimen/_6sdp"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_user_profile"
                            app:tint="@color/secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8.5"
                            android:fontFamily="@font/lato"
                            android:gravity="center_vertical"
                            android:text="Profile"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:src="@drawable/ic_nextpage"
                            app:tint="@color/gray" />
                    </LinearLayout>


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:background="#16000000" />

                    <LinearLayout
                        android:id="@+id/more_LoyaltyBunchFamily_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:gravity="start|center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/_5sdp"
                            android:weightSum="10">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_lbfamily"
                                app:tint="@color/secondary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8.5"
                                android:fontFamily="@font/lato"
                                android:gravity="center_vertical"
                                android:text="Loyalty Bunch Family"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                android:textColor="@color/black" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:src="@drawable/ic_nextpage"
                                app:tint="@color/gray" />
                        </LinearLayout>


                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:background="#16000000" />
                    </LinearLayout>

                    <!--  <LinearLayout
                          android:id="@+id/more_shareApp_btn"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginHorizontal="@dimen/_8sdp"
                          android:layout_marginVertical="@dimen/_6sdp"
                          android:gravity="start|center_vertical"
                          android:orientation="horizontal"
                          android:padding="@dimen/_5sdp"
                          android:weightSum="10">

                          <ImageView
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_marginEnd="@dimen/_5sdp"
                              android:layout_weight="1"
                              android:src="@drawable/ic_shareappp"
                              app:tint="@color/secondary" />

                          <TextView
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="8.5"
                              android:fontFamily="@font/lato"
                              android:gravity="center_vertical"
                              android:text="Invite &amp; Share"
                              android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                              android:textColor="@color/black" />

                          <ImageView
                              android:layout_width="0dp"
                              android:layout_height="match_parent"
                              android:layout_weight="0.5"
                              android:src="@drawable/ic_nextpage"
                              app:tint="@color/gray" />
                      </LinearLayout>


                      <View
                          android:layout_width="wrap_content"
                          android:layout_height="1dp"
                          android:layout_marginHorizontal="@dimen/_5sdp"
                          android:layout_marginTop="@dimen/_1sdp"
                          android:background="#16000000" />-->


                    <LinearLayout
                        android:id="@+id/more_FAQs_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginVertical="@dimen/_6sdp"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_faq"
                            app:tint="@color/secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8.5"
                            android:fontFamily="@font/lato"
                            android:gravity="center_vertical"
                            android:text="FAQs"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:src="@drawable/ic_nextpage"
                            app:tint="@color/gray" />
                    </LinearLayout>


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:background="#16000000" />

                    <LinearLayout
                        android:id="@+id/more_privacy_policy_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginVertical="@dimen/_6sdp"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_verified_user"
                            app:tint="@color/secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8.5"
                            android:fontFamily="@font/lato"
                            android:gravity="center_vertical"
                            android:text="Privacy Policy"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:src="@drawable/ic_nextpage"
                            app:tint="@color/gray" />
                    </LinearLayout>


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:background="#16000000" />

                    <LinearLayout
                        android:id="@+id/more_Terms_Conditions_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginVertical="@dimen/_6sdp"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_list"
                            app:tint="@color/secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8.5"
                            android:fontFamily="@font/lato"
                            android:gravity="center_vertical"
                            android:text="Terms &amp; Conditions"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:src="@drawable/ic_nextpage"
                            app:tint="@color/gray" />
                    </LinearLayout>


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:background="#16000000" />

                    <LinearLayout
                        android:id="@+id/more_ContactUs_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_8sdp"
                        android:layout_marginVertical="@dimen/_6sdp"
                        android:gravity="start|center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_contact_us"
                            app:tint="@color/secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8.5"
                            android:fontFamily="@font/lato"
                            android:gravity="center_vertical"
                            android:text="Contact Us"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/black" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:src="@drawable/ic_nextpage"
                            app:tint="@color/gray" />
                    </LinearLayout>


                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:background="#16000000" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/versionCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version  "
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

                    <TextView
                        android:id="@+id/tv_versionName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>




    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>