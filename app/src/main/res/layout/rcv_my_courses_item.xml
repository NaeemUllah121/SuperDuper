<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeTopDeal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">        android:backgroundTint="@color/white"


        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0F3F51B5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3">

                    <ImageView
                        android:id="@+id/my_course_Image"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginHorizontal="@dimen/_4sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/web"
                       />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.7"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/courseTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CourseName"
                            android:textColor="@color/black"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            />

                        <TextView
                            android:id="@+id/courseContiBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:background="@drawable/round_btn_style"
                            android:paddingHorizontal="@dimen/_8sdp"
                            android:paddingVertical="@dimen/_2sdp"
                            android:text="Continue"
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                            android:textColor="@color/primary" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/courseDiscription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:text="It is a long established fact that a reader will be distracted by the readable content"
                        android:textSize="@dimen/_8sdp" />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/_3sdp"
                        android:background="#16000000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:src="@drawable/ic_clock" />

                        <TextView
                            android:id="@+id/courseDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150 Days"
                            android:textSize="@dimen/_8ssp" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/courseCompleted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24% Completed"
                            android:layout_marginStart="@dimen/_18sdp"
                            android:textSize="@dimen/_8sdp" />

                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>